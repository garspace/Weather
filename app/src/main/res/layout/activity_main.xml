<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/biz_plugin_weather_shenzhen_bg">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="45.0dp"
        android:background="#ffcd2626"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/title_city_manager"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:src="@drawable/title_city"
            />
        <ImageView
            android:id="@+id/city_seperator"
            android:layout_width="1.0dp"
            android:layout_height="40dp"
            android:layout_marginTop="2.0dp"
            android:layout_toRightOf="@id/title_city_manager"
            android:background="#A71717"

            />
        <TextView
            android:id="@+id/title_city_name"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@id/city_seperator"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="北京天气"
            android:textColor="#ffffffff"
            android:textSize="22.0sp"
            />
        <ImageView
            android:id="@+id/title_update_btn"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:src="@drawable/title_update"
            />
        <ImageView
            android:id="@+id/title_share"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_toLeftOf="@id/title_update_btn"
            android:src="@drawable/title_share"
            />
        <ImageView
            android:id="@+id/title_location"
            android:layout_width="45.0dp"
            android:layout_height="45.0dp"
            android:layout_toLeftOf="@id/title_share"
            android:src="@drawable/base_action_bar_action_city"
            />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imagehead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/biz_plugin_weather_0_50"
        android:layout_below="@id/title"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:text="北京"
        android:textColor="#ffdf"
        android:id="@+id/textName"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="今天13：25发布"
        android:id="@+id/textTime"
        android:textColor="#ffdf"
        android:layout_below="@id/textName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="湿度：75%"
        android:textColor="#ffdf"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/textTime"
        android:layout_marginTop="25dp"
        android:id="@+id/textQuality" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PM2.5"
        android:id="@+id/textPM"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="80dp"
        android:textColor="#ffdf"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:id="@+id/pmData"
        android:textSize="35sp"
        android:textColor="#8ffd22"
        android:layout_below="@id/textPM"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/pmQuality"
        android:layout_below="@id/pmData"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="15dp"
        android:text="重度污染"
        android:textSize="25sp"
        android:textColor="#ffdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v4.view.ViewPager
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textQuality"
        android:layout_marginTop="10dp"
        android:id="@+id/viewPager"
        android:layout_width="230dp"
        android:layout_height="230dp"></android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_below="@+id/viewPager"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="  今天星期四"
                android:textColor="#ffdf"
                android:id="@+id/textweek"
                />
            <TextView
                android:id="@+id/textT"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="-5℃－5℃"
                android:textColor="#ffdf"
                android:textSize="25sp"
                />
            </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        android:layout_height="wrap_content"
        android:text="  请转多云"
        android:textColor="#ffdf"
        android:textSize="25sp"
        android:id="@+id/textwewather"
       />
    <TextView
        android:id="@+id/textWind"
        android:textSize="25sp"
        android:textColor="#ffdf"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="微风"
        />
    </LinearLayout>
    </LinearLayout>


</RelativeLayout>

